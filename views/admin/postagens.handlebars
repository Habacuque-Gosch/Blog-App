<h2>Lista de postagens</h2>
<hr>
<a href="/admin/add-categoria"><button class="btn btn-success mb-4">Adicionar nova postagem</button></a>
{{#each categorias}}

    <div class="card">
        <div class="card-body">
            <p>{{titulo}}</p>
            <small>Slug: {{slug}}</small>
            <p>{{descricao}}</p>
            <p>{{conteudo}}</p>
            <br>
            <a href="/admin/edit-categoria/{{id}}"><button class="btn btn-success mt-2">Editar Categoria</button></a>
            <a href="/admin/delete-categoria/{{id}}"><button class="btn btn-danger mt-2">Deletar Categoria</button></a>
        </div>
    </div>
    <br>

{{else}}
    <h4>Nenhuma postagem encontrada</h4>
{{/each}}