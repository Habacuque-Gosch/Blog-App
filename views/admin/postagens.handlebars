<h2>Lista de postagens</h2>
<hr>
<a href="/admin/add-postagens"><button class="btn btn-success mb-4">Adicionar nova postagem <i class="bi bi-plus-circle"></i></button></a>

{{#each postagens}}

    <div class="card">
        <div class="card-body">
            <p>Titulo: {{titulo}}</p>
            <small>Slug: {{slug}}</small>
            <p>Descrição: {{descricao}}</p>
            <p>{{conteudo}}</p>
            <p>Categoria: {{categoriaId}}</p>
            <br>
            <a href="/admin/edit-postagem/{{id}}"><button class="btn btn-success mt-2">Editar Postagem <i class="bi bi-pencil"></i></button></a>
            <a href="/admin/delete-postagem/{{id}}"><button class="btn btn-danger mt-2">Deletar Postagem <i class="bi bi-trash"></i></button></a>
        </div>
    </div>
    <br>

{{else}}
    <h4>Nenhuma postagem encontrada</h4>
{{/each}}